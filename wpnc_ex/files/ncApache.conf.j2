<VirtualHost {{ ncIP }}:{{ httpPort }}>
    ServerAdmin webmaster@localhost
    ServerName {{ ncDomain }}
    ServerAlias www.{{ ncDomain }}
    DocumentRoot /var/www/{{ ncDomain }}/nextcloud
    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    <Directory /var/www/{{ ncDomain }}>
          Options -Indexes
          AllowOverride All
    </Directory>

    <IfModule mod_dir.c>
        DirectoryIndex index.php index.html index.cgi index.pl  index.xhtml index.htm
    </IfModule>

</VirtualHost>
